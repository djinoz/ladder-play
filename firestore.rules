rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User isolation: Users strictly access only their own document subtree
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Cascade rules down to user subcollections (sessions, modules)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Global Analytics Collection
    // Allows anyone (unauth or auth) to CREATE records, but NO ONE to read or update them.
    // This forms a secure one-way drop box for telemetry across logged and unlogged sessions.
    match /anonymized_sessions/{docId} {
      allow create: if true; 
      allow read, update, delete: if false; 
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
